---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import AboutHeroImage from '../assets/about.jpg';
import { Image } from 'astro:assets';

import { getI18n } from "../i18n";

const lang = Astro.url.searchParams.get("lang") ?? "en";
const t = getI18n(lang as "en" | "es");
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>AC.Analytics | Data Analyst Portfolio</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>{t.hero.title}</h1>
        		<p>{t.hero.description}</p>
				<div class="cta-buttons">
					<a href="#projects" class="primary-btn">{t.hero.cta.projects}</a>
					<a href="#about" class="primary-btn">{t.hero.cta.about}</a>
					<a href="CV-Alberto.pdf" download="CV-Alberto.pdf" class="secondary-btn">{t.hero.cta.download}</a>
				</div>
			</section>

			<section id="projects" class="projects-section">
				<h2>{t.projects.title}</h2>

				<div class="project-grid">
					<div class="project-card">
						<h3>{t.projects.gym.title}</h3>
						<p>{t.projects.gym.description}</p>
						<a href="/acanalytics/projects/gym-admin/" target="_blank">{t.projects.gym.link}</a>
					</div>

					<div class="project-card">
						<h3>{t.projects.python.title}</h3>
						<p>{t.projects.python.description}</p>
						<a href="https://gitlab.com/acastro97/random_users_list_generator" target="_blank">{t.projects.python.link}â†’</a>
					</div>

					<div class="only-text-link">
						<a href="/acanalytics/projects/" target="_blank">{t.projects.seeAll}</a>
					</div>
				</div>
			</section>

			<section id="about" class="projects-section">
				<h2>{t.about.title}</h2>

				<div class="hero-image-container">
					<Image alt="" width={300} height={300} loading="eager" src={AboutHeroImage} />
				</div>
				<p>
					{t.about.content}
				</p>
			</section>

			<section id="contact" class="projects-section">
				<h2>{t.contact.title}</h2>

				<div class="contact-me-links">
					<a href="mailto:ajcastro9726@gmail.com" class="primary-btn">
						<i class="fa-solid fa-envelope"></i> 
						{t.contact.email}
					</a>
					<a href="https://www.linkedin.com/in/alberto-jos%C3%A9-castro-jim%C3%A9nez-80718013a/" class="primary-btn">
						<i class="fab fa-linkedin"></i> 
    					{t.contact.linkedin}
					</a>
				</div>
			</section>

		</main>
		<Footer />
	</body>
</html>


