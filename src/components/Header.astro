---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import DarkModeToggle from './DarkModeToggle.astro';
---

<header>

<nav class="relative bg-gray-800/50 after:pointer-events-none after:absolute after:inset-x-0 after:bottom-0 after:h-px after:bg-white/10">
  <div class="flex-shrink-0">
            <h2 class="text-xl font-bold text-white tracking-wider">
                <a href="/" class="site-title-link">{SITE_TITLE}</a>
            </h2>
        </div>
	<div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-end">
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
			<HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/">Home</HeaderLink>
			<HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/projects/">Projects</HeaderLink>
			<HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/about/">About</HeaderLink> 
			<HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/contact/">Contact</HeaderLink>
			<DarkModeToggle />
          </div>
        </div>
      </div>
    </div>
  </div>

  <el-disclosure id="mobile-menu" hidden class="block sm:hidden">
    <div class="space-y-1 px-2 pt-2 pb-3">
      <!-- Current: "bg-gray-950/50 text-white", Default: "text-gray-300 hover:bg-white/5 hover:text-white" -->
	  <HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/">Home</HeaderLink>
	  <HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/projects/">Projects</HeaderLink>
      <HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/about/">About</HeaderLink> 
	  <HeaderLink aria-current="page" class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white" href="/contact/">Contact</HeaderLink>
	  <DarkModeToggle />
    </div>
  </el-disclosure>
</nav>

</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--color-block-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		font-weight: bold;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none !important;
		font-weight: bold;
	}
	nav a.active {
		border-bottom-color: var(--accent) !important;
		font-weight: bold;
	}
	.site-title-link {
		border-bottom: 0 !important; 
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (min-width: 340px ) and (max-width: 720px) {
		header {
			padding: 0 0.5em; 
			box-shadow: none; 
		}

		nav {
			width: 90%; 
			align-items: flex-start; 
		}
		
		h2 {
			margin-right: 0.5em; 
			font-size: 0.7em;
		}

		nav a {
			padding: 1em 0.3em; 
			border-bottom-width: 2px;
			font-size: 0.7em;
			justify-content: center;
			line-height: 3.2em;
			vertical-align: bottom;
			text-decoration: none !important;
		}
		a:-webkit-any-link {
		text-decoration: none !important;
		}
		.social-links {
			margin-left: 0.5em;
			display:none;
		}
	}
</style>
