---
// Importa el componente renderizador desde el paquete que instalaste.
import { FontAwesomeIcon } from 'font-awesome-astro'; 

// Recibe las propiedades que le pasaremos: el ícono, el tamaño, la clase CSS, etc.
const { icon, size, class: className, ...attrs } = Astro.props;
---

<FontAwesomeIcon 
    icon={icon} 
    size={size || '1x'} 
    class={className} 
    {...attrs} 
/>